---
interface Props {
    page: string;
    href: string;
    title: string;
}

const {page, href, title} = Astro.props;

function isActive(): boolean {
    return href === page;
}
---
<li>
    <a href={href}
       class={`hover:bg-zinc-700 py-2 px-4 rounded-xl transition-colors duration-150 ${isActive() ? "bg-rose-600 hover:bg-rose-700 text-zinc-100" : "bg-none text-zinc-300"}`}>
        {title}
    </a>
</li>
